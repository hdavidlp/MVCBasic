<h2>@ViewBag.Title</h2>
<div class="row" style="text-align:right;padding:5px;">
    <a href="~/Clientes/Nuevo/" class="btn btn-primary">Nuevo</a>
</div>


<div class="row">
    <div class="col-md-12">
        <table class="table">
            
            <tr>
                <th>id</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Correo</th>
                <th>Options</th>
                @foreach (var elemento in Model)
                {
                    <tr>
                        <th>@elemento.idCliente</th>
                        <th>@elemento.nombre</th>
                        <th>@elemento.apellidos</th>
                        <th>@elemento.correo</th>
                        <th>
                            <a class="btn btn-default" href="~/Clientes/edit/@elemento.idCliente">Edit</a>
                            <a class="btn btn-danger" href="~/Clientes/delete/@elemento.idCliente">Delete</a>
                        </th>

                    </tr>
                }
                </tr>
            </table>
        </div>
    </div>

